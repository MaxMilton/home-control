{
  "name": "homie-bot",
  "version": "0.1.1",
  "description": "ðŸ¤– Home automation, yo!",
  "repository": "https://github.com/MaxMilton/homie-bot",
  "bugs": "https://github.com/MaxMilton/homie-bot/issues",
  "homepage": "https://github.com/MaxMilton/homie-bot#readme",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "bot",
    "home-automation",
    "maxmilton",
    "minna-ui",
    "node",
    "postcss",
    "sapper",
    "sqlite",
    "svelte",
    "web-app",
    "web-ui"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "static",
    "scripts"
  ],
  "scripts": {
    "dev": "NODE_ENV=development sapper dev",
    "build": "NODE_ENV=production sapper build ./dist",
    "serve": "NODE_ENV=production node ./dist",
    "_run": "yarn build && yarn serve",
    "lint": "run-s lint:*",
    "lint:md": "remark --frail --quiet .",
    "lint:css": "stylelint '**/*.{css,html,js,md,svelte,ts}'",
    "lint:js": "eslint --ext html,js,md,svelte,ts .",
    "lint:types": "tsc --noEmit || true",
    "pretest": "yarn lint",
    "test": "JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "dependencies": {
    "better-sqlite3": "^5.4.0",
    "color-convert": "^2.0.0",
    "colorette": "^1.0.7",
    "compression": "^1.7.4",
    "polka": "^0.5.2",
    "sirv": "^0.2.2",
    "yeelight-awesome": "^1.0.12"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.8.5",
    "@types/better-sqlite3": "5.2.2",
    "@types/color-convert": "1.9.0",
    "@wearegenki/node-utils": "0.1.2",
    "@wearegenki/renovate-config": "1.0.0",
    "chokidar": "2.1.4",
    "codecov": "3.2.0",
    "eslint": "5.15.3",
    "jest": "24.5.0",
    "minna-ui": "0.22.0-next.193",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.14",
    "postcss-scss": "2.0.0",
    "prettier": "1.16.4",
    "purgecss": "1.1.0",
    "remark-cli": "6.0.1",
    "rollup": "1.7.0",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-replace": "2.1.1",
    "rollup-plugin-svelte": "5.0.3",
    "rollup-plugin-terser": "4.0.4",
    "rollup-plugin-typescript": "1.0.0",
    "sapper": "0.26.0-alpha.12",
    "stylelint": "9.10.1",
    "svelte": "3.0.0-beta.15",
    "tslib": "1.9.3",
    "typescript": "3.3.4000"
  },
  "browserslist": {
    "production": [
      "extends @minna-ui/browserslist-config/lib/modern"
    ],
    "development": [
      "extends @minna-ui/browserslist-config/lib/dev"
    ]
  },
  "babel": {
    "presets": [
      "@minna-ui/jest-config/lib/babel-preset"
    ]
  },
  "postcss": {
    "map": true,
    "syntax": "postcss-scss",
    "plugins": {
      "@minna-ui/postcss-config": {
        "unsafe": true
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config",
      "@minna-ui/eslint-config/lib/svelte"
    ]
  },
  "eslintIgnore": [
    "__sapper__/**",
    "dist/**",
    "test/coverage/**"
  ],
  "stylelint": {
    "extends": "@minna-ui/stylelint-config",
    "ignoreFiles": [
      "__sapper__/**",
      "dist/**",
      "test/coverage/**"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "@minna-ui/remark-config"
    ]
  },
  "jest": {
    "preset": "@minna-ui/jest-config"
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">10.0.0",
    "yarn": ">1.12.0"
  }
}
