// config for rich intelliSense in VS Code
{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    // "diagnostics": true,

    // "sourceMap": true,

    // "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "strict": true, // enables a bunch of other options

    "baseUrl": "."
  },
  "exclude": [
    "__sapper__",
    "dist",
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
